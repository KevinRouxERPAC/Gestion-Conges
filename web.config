<?xml version="1.0" encoding="utf-8"?>
<!--
  Configuration IIS pour Gestion Conges (HttpPlatformHandler + Waitress).
  Avant déploiement : remplacer C:\inetpub\GestionConges par le chemin physique
  de votre site (répertoire contenant app.py, run_wsgi.py, etc.).
-->
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <httpPlatform
      processPath="C:\inetpub\GestionConges\venv\Scripts\python.exe"
      arguments="run_wsgi.py"
      stdoutLogEnabled="true"
      stdoutLogFile="C:\inetpub\GestionConges\logs\stdout.log"
      startupTimeLimit="20">
      <environmentVariables>
        <environmentVariable name="SECRET_KEY" value="changez-moi-en-production-cle-secrete-forte" />
        <environmentVariable name="PYTHONUNBUFFERED" value="1" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
